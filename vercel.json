{
    "builds": [
        {
            "src": "vercel_app/wsgi.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.9"
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "vercel_app/wsgi.py"
        }
    ],
    "crons": [
        {
            "path": "/api/update",
            "schedule": "0 5 * * *"
        }
    ]
}